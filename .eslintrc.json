{
	"root": true,
	"extends": ["eslint:recommended", "plugin:svelte/recommended", "prettier"],
	"parserOptions": {
		"project": "jsconfig.json",
		"tsconfigRootDir": "functions",
		"sourceType": "module",
		"ecmaVersion": "latest",
		"extraFileExtensions": [".svelte"]
	},
	"env": {
		"browser": true,
		"node": true,
		"es2021": true
	},
	"ignorePatterns": ["node_modules"],
	"overrides": [
		{
			"files": ["*.svelte"],
			"parser": "svelte-eslint-parser"
		}
	]
}
